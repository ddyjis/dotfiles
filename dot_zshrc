# Homebrew
export HOMEBREW_NO_AUTO_UPDATE=1
export PATH="/opt/homebrew/bin:$PATH"

# Set up starship
eval "$(starship init zsh)"

# Zoxide
eval "$(zoxide init zsh)"

# Utilities
function mkcd () {
  mkdir -p -- "$1" && cd -P -- "$1"
}

# Aliases
alias ..='cd ..'
alias ~='cd ~'

alias ls='eza'
alias ll='eza -lbF --git'
alias lla='eza -lbha --time-style=long-iso --git'

alias reload='source ~/.zshrc'

# Environment Variables
export XDG_CONFIG_HOME="$HOME/.config"

# vllm
export PATH="/Users/ddyjis/.venv-vllm-metal/bin:$PATH"

# Added by Antigravity
export PATH="/Users/ddyjis/.antigravity/antigravity/bin:$PATH"

# Override stock bison with homebrew bison
export PATH="/opt/homebrew/opt/bison/bin:$PATH"

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/ddyjis/.lmstudio/bin"
# End of LM Studio CLI section

